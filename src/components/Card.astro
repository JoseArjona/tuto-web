---
const { title, date, heroImage, link ,heroImageAlt} = Astro.props;
---

<a href={link}>
  <div class="card">
    <div>
      <img src={heroImage} alt={heroImageAlt}/>
    </div>
    <div class="card-content">
      <h2>{title}</h2>
      <p>{date}</p>
    </div>
  </div>
</a>
<style>
  img {
    width: 100%;
    height: 100%;
  }
  .card {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    justify-content: center;
    align-items: center;
    box-shadow: var(--shadow-2);
    border-radius: var(--border-radius-2);
    animation-duration: 2s;
    animation-name: fadein;
  }
  .card:hover {
    box-shadow: var(--shadow-6);
  }
  .card-content{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
    @keyframes fadein {
        from {
        opacity: 0;
        }
        to {
        opacity: 1;
        }
    }
  a {
    text-decoration: none;
    color: inherit;
  }
  h2 {
    font-size: var(--font-size-fluid-1);
    padding: 1rem;
  }
  p {
    font-size: var(--font-size-fluid-0);
    margin: 0;
    font-style: italic;
  }
</style>
